  pod 'Nuke'

  # 3. UI関連処理で利用するライブラリ
  pod 'SideMenu'
  pod 'SwiftyAttributes'
  pod 'BetterSegmentedControl'
  pod 'PKHUD'
  pod 'AnimatedCollectionViewLayout'
  pod 'Toast-Swift'
  pod 'TagListView'
  pod 'BouncyLayout'
end
